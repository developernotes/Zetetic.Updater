<Window x:Class="Zetetic.Updater.ProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Progress" Width="300" SizeToContent="Height" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="5,5,5,5">
            <Label Name="_labelProgress" Margin="0,5,0,0">0%</Label>
            <ProgressBar Name="_progressSync" Height="25" IsIndeterminate="False" Margin="0,5,0,0"></ProgressBar>
            <Button x:Name="_buttonCancel" HorizontalAlignment="Right" Margin="0,5,0,0" Width="75" Click="_buttonCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
